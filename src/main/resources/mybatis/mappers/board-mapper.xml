<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="boardList" resultType="Map">
		SELECT * FROM board order by bno desc limit 10
	</select>
	
	<select id="detail" parameterType="String" resultType="boardDTO">
		select * from board where bno = #{bno}
	</select>
	
	<!-- insert는 result가 없다. -->
	<insert id="write" parameterType="boardDTO">
		insert into board (btitle, bcontent, bwrite, bip) values (#{btitle}, #{bcontent}, #{bwrite}, #{bip})
	</insert>


</mapper>